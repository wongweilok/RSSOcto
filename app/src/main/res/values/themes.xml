<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RSSOcto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/fg_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/fg_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/overflowButton</item>
        <item name="preferenceTheme">@style/preferenceTheme</item>
        <item name="android:textColorSecondary">@drawable/setting_text_color_2_light</item>
        <!-- Color use for CSS -->
        <item name="cssBackground">@color/white_medium</item>
        <item name="cssTextColor">@color/fg_light</item>
    </style>

    <style name="cardTheme">
        <item name="cardBackgroundColor">@color/white_medium</item>
    </style>

    <style name="cardText">
        <item name="android:textColor">@drawable/text_color_light</item>
    </style>

    <style name="layoutBackground">
        <item name="android:background">@color/white_hard</item>
    </style>

    <style name="entryImageFallback">
        <item name="android:background">@drawable/circle_light</item>
    </style>

    <style name="actionBarTheme">
        <item name="android:background">@color/white_hard</item>
        <item name="titleTextColor">@color/fg_light</item>
    </style>

    <style name="overflowButton" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_light</item>
    </style>

    <style name="bottomBarTheme">
        <item name="android:background">@color/white_medium</item>
    </style>

    <style name="preferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:textColor">@drawable/text_color_light</item>
    </style>
</resources>